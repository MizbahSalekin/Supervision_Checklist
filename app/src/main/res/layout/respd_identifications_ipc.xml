        <EditText android:id="@+id/txtvillage_name" android:maxLength="200" android:layout_width="300sp"  android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ. " android:inputType="textCapCharacters|text" />
    </LinearLayout>
        <View android:id="@+id/linevillageid" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" android:visibility="gone" />

        <LinearLayout android:id="@+id/secq105" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" style="@style/rowStyle0">
            <TextView android:id="@+id/Vlblq105" android:text="105. ওয়ার্ড নম্বর:" android:layout_width="300sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <Spinner android:id="@+id/spnq105" android:drawSelectorOnTop="true" android:layout_width="200sp" android:layout_height="wrap_content" android:layout_weight="0" android:prompt="@string/planet_prompt" android:textSize="20sp" />
        </LinearLayout>
        <View android:id="@+id/lineq105" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secq106" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" style="@style/rowStyle0">
           <TextView android:id="@+id/Vlblq106" android:text="106. ইপিআই কেন্দ্রের নাম/ব্লক:" android:layout_width="300sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <Spinner android:id="@+id/spnq106" android:drawSelectorOnTop="true" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_weight="0" android:prompt="@string/planet_prompt" android:textSize="20sp" />
        </LinearLayout>
        <View android:id="@+id/lineq106" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
        <LinearLayout android:id="@+id/secq107" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" style="@style/rowStyle0">
             <TextView android:id="@+id/Vlblq107" android:text="107. সুপারভাইসর এর পদবি:" android:layout_width="300sp" android:layout_height="wrap_content" android:textSize="20sp" />
            <Spinner android:id="@+id/spnq107" android:drawSelectorOnTop="true" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_weight="0" android:prompt="@string/planet_prompt" android:textSize="20sp" />
        </LinearLayout>
        <View android:id="@+id/lineq107" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

        <LinearLayout android:id="@+id/secinterviewer_date" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" style="@style/rowStyle0">
            <TextView android:id="@+id/Vlblinterviewer_date" android:text="108. টিকাকেন্দ্র পরিদর্শনের তারিখ" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/dtpinterviewer_date" android:drawableRight="@drawable/calender" android:layout_width="160sp" android:inputType="text" android:layout_height="wrap_content" android:focusable="false" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" />
        </LinearLayout>
        <View android:id="@+id/lineinterviewer_date" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />


        <LinearLayout android:id="@+id/secinterviewer_id" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" style="@style/rowStyle0">
            <TextView android:id="@+id/Vlblinterviewer_id" android:text="109. টিকাকেন্দ্র পরিদর্শনকারীর নাম" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20sp" />
            <EditText android:id="@+id/txtinterviewer_id" android:enabled="false" android:maxLength="200" android:layout_width="300sp"  android:layout_height="wrap_content" style="@style/customEdit" android:layout_marginRight="10sp" android:textSize="20sp" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ. " android:inputType="textCapCharacters|text" />
        </LinearLayout>
        <View android:id="@+id/lineinterviewer_id" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

        <LinearLayout android:layout_width="fill_parent" android:paddingTop="20sp" android:layout_height="wrap_content" android:orientation="vertical">
            <Button android:id="@+id/cmdSave" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/button_style_green"
                android:textSize="20sp" android:text=" Save -> Continue " android:textColor="#FFFFFF" android:layout_marginBottom="20sp" android:layout_marginLeft="20sp" android:layout_marginRight="20sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>