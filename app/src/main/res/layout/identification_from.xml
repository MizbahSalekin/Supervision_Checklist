            android:id="@+id/VlblSNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="মোট দম্পতি " android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="25sp" android:gravity="left|center_vertical"
            android:visibility="visible" android:layout_toLeftOf="@+id/lblTCount"/>

        <TextView
            android:id="@+id/lblTCount"
            android:layout_width="80sp" android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:textColor="#ffffff" android:layout_toLeftOf="@+id/cmdClose"
            android:textSize="20sp" android:layout_marginRight="30dp" android:gravity="left|center_vertical"/>-->

        <ImageButton android:id="@+id/cmdClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/close" />

    </RelativeLayout>
