<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners 
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="20dp" />
            <gradient android:angle="270" android:startColor="@color/icddrb_register_color_background" android:endColor="@color/icddrb_register_color_background" android:type="linear" />
        </shape>
        <color android:color="#FFFFFF" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners 
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="20dp" />
            <gradient android:angle="270" android:startColor="#80CBC4" android:endColor="#80CBC4" android:type="linear" />
        </shape>

    </item>
</selector>